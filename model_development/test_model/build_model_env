#!/bin/bash

# Function to check if virtualenv is installed
check_virtualenv() {
    if ! command -v python3 -v &> /dev/null; then
        echo "Python 3 is not installed. Please install Python 3."
        exit 1
    fi
}

# Function to create a virtual environment
create_venv() {
    local env_name=${1:-".venv"}
    if [ -d "$env_name" ]; then
        echo "Virtual environment '$env_name' already exists. Skipping creation."
    else
        echo "Creating virtual environment '$env_name'..."
        python3 -m venv "$env_name"
        echo "Virtual environment created successfully."
    fi
}

# Function to activate the virtual environment
activate_venv() {
    local env_name=${1:-".venv"}
    if [ -d "$env_name" ]; then
        echo "Activating virtual environment '$env_name'..."
        source "./$env_name/bin/activate"
        echo "Virtual environment activated."
    else
        echo "Virtual environment '$env_name' not found."
    fi
}

# Function to install dependencies from requirements.txt
install_deps() {
    local env_name=${1:-".venv"}
    if [ -d "$env_name" ]; then
        echo "Installing dependencies from requirements.txt..."
        source "./$env_name/bin/activate"
        pip install -r requirements.txt
        echo "Dependencies installed successfully."
    else
        echo "Virtual environment '$env_name' not found."
    fi
}

# Main execution flow
check_virtualenv
create_venv
activate_venv
install_deps